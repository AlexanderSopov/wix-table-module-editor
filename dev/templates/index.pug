doctype html
html(lang="en")
  head
    title= "Wix Module Editor"
    meta(charset="utf-8")
    meta(name="description", content="Editor a wix-html-module")
    meta(name="author", content="Alexander Sopov")
    meta(name="viewport", content="width=device-width, initial-scale=1,maximum-scale=1, user-scalable=no")
    link(href="https://fonts.googleapis.com/css?family=Gentium+Basic|Josefin+Sans:300,400", rel="stylesheet")
    style
      include ../../dist/css/style.css
    script(src="https://code.jquery.com/jquery-2.2.4.min.js")
    script
      include ../../dist/js/bundle.js
  body
    h1 Wix Tabellredigerare
    div#editor
      div#description-editor
        h2 Beskrivning
        textarea
      div#specification-editor
        h2 Specifikation
        textarea
    div#preview
      div.tab-container
        div#description.tab.active(onclick="_tab_module.openTab(this)")
          p Beskrivning
        div#specification.tab(onclick="_tab_module.openTab(this)")
          p Specifikation
      div#description-content.content.active-content
      table#specification-content.content
    div#code-snippet
